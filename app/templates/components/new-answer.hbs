{{#if addNewAnswer}}
  <form>
    <div class="form-group">
      <label for="response">What's yr answer?</label>
      {{input value=response id="response"}}
    </div>
    <div class="form-group">
      <label for="responder">What's yr name?</label>
      {{input value=responder id="responder"}}
    </div>
    <button {{action 'saveAnswer'}}>Submit Answer</button>
  </form>
{{else}}
  <button {{action 'answerFormShow'}}>Add an answer</button>
{{/if}}
